<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/simple_wall"
    android:weightSum="7.8"
    tools:context=".HighLowActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/text_back"
            android:textSize="24sp"
            android:onClick="tapBack"></TextView>

        <TextView
            android:id="@+id/player_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_alternates_medium_italic"
            android:text="Player 1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:textSize="29dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:fontFamily="@font/montserrat_alternates_medium_italic"
            android:gravity="center"
            android:text="Player 1"
            android:textSize="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="@font/montserrat_alternates_medium_italic"
            android:text="Player 2"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:fontFamily="@font/montserrat_alternates_medium_italic"
            android:gravity="center"
            android:text="0"
            android:textSize="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="@font/montserrat_alternates_medium_italic"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gameScreen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/yamahuda2"
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:background="@drawable/clover2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.757"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498"></ImageView>

        <ImageView
            android:id="@+id/yamahuda1"
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:background="@drawable/clover1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.757"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498"></ImageView>

        <ImageView
            android:id="@+id/sutehuda"
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:background="@drawable/clover3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.209"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498"></ImageView>

        <ImageView
            android:id="@+id/misstake"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/mistake"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.496"></ImageView>

        <ImageView
            android:id="@+id/correct"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/correct"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498"></ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/low_button"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_alternates_medium_italic"
            android:onClick="low"
            android:text="Low"
            android:textColor="@color/black"
            android:textSize="20dp"

            app:backgroundTint="@color/white"
            app:cornerRadius="10dp"
            app:strokeColor="@color/blue"
            app:strokeWidth="3dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_alternates_medium_italic"
            android:text="or"
            android:textSize="30dp"
            android:gravity="center" />

        <Button
            android:id="@+id/high_button"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_alternates_medium_italic"
            android:onClick="high"
            android:text="High"
            android:textColor="@color/black"
            android:textSize="20dp"

            app:backgroundTint="@color/white"
            app:cornerRadius="10dp"
            app:strokeColor="@color/red"
            app:strokeWidth="3dp"/>

    </LinearLayout>

</LinearLayout>