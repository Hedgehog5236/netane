<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/theme_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemeActivity"
    android:orientation="vertical"
    android:weightSum="9"
    android:background="@drawable/mountain_sky"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:onClick="tapBack"
        android:text="@string/text_back"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/theme_topic_title"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01">
    </TextView>

    <TextView
        android:id="@+id/theme_header_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:text="topics:  "
        android:textSize="12sp"
        android:gravity="center"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/theme_setting_button"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/theme_topic_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005">
    </TextView>

    <ImageButton
        android:id="@+id/theme_setting_button"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:background="@drawable/setting"
        android:onClick="tapSetting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toEndOf="@+id/theme_topic_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003">
    </ImageButton>

    <TextView
        android:id="@+id/theme_topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center_horizontal"
        android:text="Topic Title"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005">
    </TextView>

    <TextView
        android:id="@+id/theme_caution"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:background="@color/off_white2"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center"
        android:text="Caution"
        android:textColor="@color/off_red"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theme_topic_title"
        app:layout_constraintVertical_bias="0.0">
    </TextView>

    <TextView
        android:id="@+id/theme_topic_tv"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center"
        android:paddingHorizontal="2dp"
        android:text="Tap screen to start"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theme_caution"
        app:layout_constraintVertical_bias="0.0">
    </TextView>

    <ImageView
        android:id="@+id/theme_topic_iv"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theme_caution"
        app:layout_constraintVertical_bias="0.0">
    </ImageView>

    <View
        android:id="@+id/theme_divider1"
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theme_topic_tv"
        app:layout_constraintVertical_bias="0.0">
    </View>

    <TextView
        android:id="@+id/theme_annotation"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:background="@color/off_white2"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center"
        android:text="Annotation"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theme_divider1"
        app:layout_constraintVertical_bias="0.0">
    </TextView>

    <TextView
        android:id="@+id/theme_Answer_header"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:background="@color/off_bluesky"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center"
        android:text="Answer_header"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theme_annotation"
        app:layout_constraintVertical_bias="0.0">
    </TextView>

    <TextView
        android:id="@+id/theme_Answer"
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"
        android:background="@drawable/off_white_background"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center_horizontal"
        android:padding="2dp"
        android:text="Answer"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theme_Answer_header"
        app:layout_constraintVertical_bias="0.0">
    </TextView>

    <ImageView
        android:id="@+id/theme_Answer_iv"
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/off_white_background"
        android:gravity="center_horizontal"
        android:visibility="invisible"
        android:layout_margin="3dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theme_Answer_header"
        app:layout_constraintVertical_bias="0.0">
    </ImageView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/theme_left_up"
        android:layout_width="170sp"
        android:layout_height="95sp"
        android:layout_gravity="center"
        android:background="@drawable/white_background"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center"
        android:onClick="tapChoice"
        android:padding="5dp"
        android:text="left_up"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/theme_Answer"
        app:layout_constraintEnd_toEndOf="@+id/theme_Answer"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="@+id/theme_Answer"
        app:layout_constraintTop_toBottomOf="@+id/theme_Answer_header"
        app:layout_constraintVertical_bias="0.15">
    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/theme_right_up"
        android:layout_width="170sp"
        android:layout_height="95sp"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center"
        android:onClick="tapChoice"
        android:padding="5dp"
        android:text="right_up"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="invisible"
        android:background="@drawable/white_background"
        app:layout_constraintBottom_toBottomOf="@+id/theme_Answer"
        app:layout_constraintEnd_toEndOf="@+id/theme_Answer"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="@+id/theme_Answer"
        app:layout_constraintTop_toBottomOf="@+id/theme_Answer_header"
        app:layout_constraintVertical_bias="0.15">
    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/theme_left_bottom"
        android:layout_width="170sp"
        android:layout_height="95sp"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center"
        android:onClick="tapChoice"
        android:padding="5dp"
        android:text="left_bottom"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="invisible"
        android:background="@drawable/white_background"
        app:layout_constraintBottom_toBottomOf="@+id/theme_Answer"
        app:layout_constraintEnd_toEndOf="@+id/theme_Answer"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="@+id/theme_Answer"
        app:layout_constraintTop_toBottomOf="@+id/theme_Answer_header"
        app:layout_constraintVertical_bias="0.85">
    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/theme_right_bottom"
        android:layout_width="170sp"
        android:layout_height="95sp"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center"
        android:onClick="tapChoice"
        android:padding="5dp"
        android:text="right_bottom"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="invisible"
        android:background="@drawable/white_background"
        app:layout_constraintBottom_toBottomOf="@+id/theme_Answer"
        app:layout_constraintEnd_toEndOf="@+id/theme_Answer"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="@+id/theme_Answer"
        app:layout_constraintTop_toBottomOf="@+id/theme_Answer_header"
        app:layout_constraintVertical_bias="0.85">
    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/theme_hide_topic"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/gradient_button_red"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:onClick="tapHide"
        android:text="Hide"
        android:textSize="15sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98">
    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/theme_next_topic"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/gradient_button_green"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:onClick="tapNext"
        android:text="Next topic"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98">
    </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>