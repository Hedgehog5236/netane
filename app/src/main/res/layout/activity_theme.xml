<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemeActivity"
    android:orientation="vertical"
    android:weightSum="9"
    android:background="@drawable/mountain_sky"
    android:clickable="true"
    android:id="@+id/theme_screen"
    android:focusable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tapBack"
        android:text="@string/text_back"
        android:textSize="22sp"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
    </TextView>

    <TextView
        android:id="@+id/theme_header_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:text=""
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005">
    </TextView>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:background="@drawable/setting"
        android:onClick="tapSetting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
    </ImageButton>

    <TextView
        android:id="@+id/topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center_horizontal"
        android:text="Topic Title"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01">
    </TextView>

    <TextView
        android:id="@+id/topic_tv"
        android:layout_width="405dp"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center"
        android:text="Tap screen to start"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11">
    </TextView>

    <Button
        android:id="@+id/left_up"
        android:layout_width="175sp"
        android:layout_height="85sp"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center"
        android:onClick="tapChoice"
        android:padding="5dp"
        android:text="left_up"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="invisible"
        app:backgroundTint="@color/off_white"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:strokeColor="@color/lime_green"
        app:strokeWidth="3dp">
    </Button>

    <Button
        android:id="@+id/right_up"
        android:layout_width="175sp"
        android:layout_height="85sp"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center"
        android:onClick="tapChoice"
        android:padding="5dp"
        android:text="right_up"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="invisible"
        app:backgroundTint="@color/off_white"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:strokeColor="@color/lime_green"
        app:strokeWidth="3dp">
    </Button>

    <Button
        android:id="@+id/left_bottom"
        android:layout_width="175sp"
        android:layout_height="85sp"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center"
        android:onClick="tapChoice"
        android:padding="5dp"
        android:text="left_bottom"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="invisible"
        app:backgroundTint="@color/off_white"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:strokeColor="@color/lime_green"
        app:strokeWidth="3dp">
    </Button>

    <Button
        android:id="@+id/right_bottom"
        android:layout_width="175sp"
        android:layout_height="85sp"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center"
        android:onClick="tapChoice"
        android:padding="5dp"
        android:text="right_bottom"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="invisible"
        app:backgroundTint="@color/off_white"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:strokeColor="@color/lime_green"
        app:strokeWidth="3dp">
    </Button>

    <TextView
        android:id="@+id/Answer"
        android:layout_width="405dp"
        android:layout_height="330dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center_horizontal"
        android:text="Answer"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:visibility="invisible"
        android:background="@drawable/off_white_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79">
    </TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hide_topic"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/gradient_button_red"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:onClick="tapHide"
        android:text="Hide"
        android:textSize="15sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97">
    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_topic"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/gradient_button_green"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:onClick="tapNext"
        android:text="Next topic"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97">
    </androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:id="@+id/annotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_alternates_medium_italic"
        android:gravity="center_horizontal"
        android:text="Annotation"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

    </TextView>

    <View
        android:id="@+id/divider1"
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="290dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37"/>

</androidx.constraintlayout.widget.ConstraintLayout>