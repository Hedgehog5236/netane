<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".HitBlowActivity"
    android:background="@drawable/background_sky">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="tapBack"
            android:text="@string/text_back"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <TextView
            android:id="@+id/HitBlow_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="100dp"
            android:fontFamily="@font/montserrat_alternates_medium_italic"
            android:gravity="center"
            android:text="Hit &amp; Blow"
            android:textColor="@color/black"
            android:textSize="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/HitBlow_info"
            android:onClick="tapInfo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="0dp"
            android:background="@drawable/info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/HitBlow_header"
            app:layout_constraintTop_toTopOf="parent">
        </androidx.appcompat.widget.AppCompatButton>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/HitBlow_P1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="@font/montserrat_alternates_medium_italic"
            android:text="Player 1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:id="@+id/HitBlow_P2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="@font/montserrat_alternates_medium_italic"
            android:text="Player 2"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginVertical="3dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/HitBlow_P1_num"
            android:tag="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:onClick="tapRecall">

            <TextView
                android:id="@+id/HitBlow_Answer1_1"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates_medium_italic"
                android:gravity="center"
                android:padding="0dp"
                android:text="\?"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@drawable/blue_corner_background">
            </TextView>

            <TextView
                android:id="@+id/HitBlow_Answer1_2"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates_medium_italic"
                android:gravity="center"
                android:padding="0dp"
                android:layout_marginLeft="1dp"
                android:text="\?"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@drawable/blue_corner_background">
            </TextView>

            <TextView
                android:id="@+id/HitBlow_Answer1_3"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates_medium_italic"
                android:gravity="center"
                android:padding="0dp"
                android:layout_marginLeft="1dp"
                android:text="\?"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@drawable/blue_corner_background">
            </TextView>

            <TextView
                android:id="@+id/HitBlow_Answer1_4"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates_medium_italic"
                android:gravity="center"
                android:padding="0dp"
                android:layout_marginLeft="1dp"
                android:text="\?"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@drawable/blue_corner_background">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/HitBlow_P2_num"
            android:tag="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:onClick="tapRecall">

            <TextView
                android:id="@+id/HitBlow_Answer2_1"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates_medium_italic"
                android:gravity="center"
                android:padding="0dp"
                android:text="\?"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@drawable/blue_corner_background">
            </TextView>

            <TextView
                android:id="@+id/HitBlow_Answer2_2"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates_medium_italic"
                android:gravity="center"
                android:padding="0dp"
                android:layout_marginLeft="1dp"
                android:text="\?"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@drawable/blue_corner_background">
            </TextView>

            <TextView
                android:id="@+id/HitBlow_Answer2_3"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates_medium_italic"
                android:gravity="center"
                android:padding="0dp"
                android:layout_marginLeft="1dp"
                android:text="\?"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@drawable/blue_corner_background">
            </TextView>

            <TextView
                android:id="@+id/HitBlow_Answer2_4"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates_medium_italic"
                android:gravity="center"
                android:padding="0dp"
                android:layout_marginLeft="1dp"
                android:text="\?"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:background="@drawable/blue_corner_background">
            </TextView>
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/HitBlow_center_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_alternates_medium_italic"
            android:gravity="center"
            android:text="Center TV"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <ListView
            android:id="@+id/HitBlow_p1_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_margin="3dp"
            android:background="@drawable/black_corner_background"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/HitBlow_p2_history"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </ListView>

        <ListView
            android:id="@+id/HitBlow_p2_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@drawable/black_corner_background"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/HitBlow_p1_history"
            app:layout_constraintTop_toTopOf="parent">
        </ListView>

        <TextView
            android:id="@+id/HitBlow_notifyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_alternates_medium_italic"
            android:gravity="center"
            android:text="Notify TV"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:visibility="invisible"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/HitBlow_cpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </com.google.android.material.progressindicator.CircularProgressIndicator>


        <TextView
            android:id="@+id/HitBlow_elapsedTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_alternates_medium_italic"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/HitBlow_cpi"
            app:layout_constraintEnd_toEndOf="@+id/HitBlow_cpi"
            app:layout_constraintStart_toStartOf="@+id/HitBlow_cpi"
            app:layout_constraintTop_toTopOf="@+id/HitBlow_cpi">
        </TextView>

        <LinearLayout
            android:id="@+id/HitBlow_input_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/blue_corner_background"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/HitBlow_input1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:fontFamily="@font/montserrat_alternates_medium_italic"
                android:gravity="center"
                android:padding="0dp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="25dp">
            </TextView>

            <TextView
                android:id="@+id/HitBlow_input2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:fontFamily="@font/montserrat_alternates_medium_italic"
                android:gravity="center"
                android:padding="0dp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="25dp">
            </TextView>

            <TextView
                android:id="@+id/HitBlow_input3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:fontFamily="@font/montserrat_alternates_medium_italic"
                android:gravity="center"
                android:padding="0dp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="25dp">
            </TextView>

            <TextView
                android:id="@+id/HitBlow_input4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:fontFamily="@font/montserrat_alternates_medium_italic"
                android:gravity="center"
                android:padding="0dp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="25dp">
            </TextView>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/HitBlow_input_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/black_corner_background"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginVertical="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/HitBlow_Button0"
                        android:tag="0"
                        android:layout_width="55dp"
                        android:layout_height="65dp"
                        android:padding="0dp"
                        android:fontFamily="@font/montserrat_alternates_medium_italic"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:onClick="tapNum"
                        android:layout_margin="3dp"

                        app:backgroundTint="@color/white"
                        app:cornerRadius="5dp"
                        app:strokeColor="@color/black"
                        app:strokeWidth="2dp"/>

                    <Button
                        android:id="@+id/HitBlow_Button1"
                        android:tag="1"
                        android:layout_width="55dp"
                        android:layout_height="65dp"
                        android:padding="0dp"
                        android:fontFamily="@font/montserrat_alternates_medium_italic"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:onClick="tapNum"
                        android:layout_margin="3dp"

                        app:backgroundTint="@color/white"
                        app:cornerRadius="5dp"
                        app:strokeColor="@color/black"
                        app:strokeWidth="2dp"/>

                    <Button
                        android:id="@+id/HitBlow_Button2"
                        android:tag="2"
                        android:layout_width="55dp"
                        android:layout_height="65dp"
                        android:padding="0dp"
                        android:fontFamily="@font/montserrat_alternates_medium_italic"
                        android:text="2"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:onClick="tapNum"
                        android:layout_margin="3dp"

                        app:backgroundTint="@color/white"
                        app:cornerRadius="5dp"
                        app:strokeColor="@color/black"
                        app:strokeWidth="2dp"/>

                    <Button
                        android:id="@+id/HitBlow_Button3"
                        android:tag="3"
                        android:layout_width="55dp"
                        android:layout_height="65dp"
                        android:padding="0dp"
                        android:fontFamily="@font/montserrat_alternates_medium_italic"
                        android:text="3"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:onClick="tapNum"
                        android:layout_margin="3dp"

                        app:backgroundTint="@color/white"
                        app:cornerRadius="5dp"
                        app:strokeColor="@color/black"
                        app:strokeWidth="2dp"/>

                    <Button
                        android:id="@+id/HitBlow_Button4"
                        android:tag="4"
                        android:layout_width="55dp"
                        android:layout_height="65dp"
                        android:padding="0dp"
                        android:fontFamily="@font/montserrat_alternates_medium_italic"
                        android:text="4"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:onClick="tapNum"
                        android:layout_margin="3dp"

                        app:backgroundTint="@color/white"
                        app:cornerRadius="5dp"
                        app:strokeColor="@color/black"
                        app:strokeWidth="2dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="1dp">

                    <Button
                        android:id="@+id/HitBlow_Button5"
                        android:tag="5"
                        android:layout_width="55dp"
                        android:layout_height="65dp"
                        android:padding="0dp"
                        android:fontFamily="@font/montserrat_alternates_medium_italic"
                        android:text="5"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:onClick="tapNum"
                        android:layout_margin="3dp"

                        app:backgroundTint="@color/white"
                        app:cornerRadius="5dp"
                        app:strokeColor="@color/black"
                        app:strokeWidth="2dp"/>

                    <Button
                        android:id="@+id/HitBlow_Button6"
                        android:tag="6"
                        android:layout_width="55dp"
                        android:layout_height="65dp"
                        android:padding="0dp"
                        android:fontFamily="@font/montserrat_alternates_medium_italic"
                        android:text="6"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:onClick="tapNum"
                        android:layout_margin="3dp"

                        app:backgroundTint="@color/white"
                        app:cornerRadius="5dp"
                        app:strokeColor="@color/black"
                        app:strokeWidth="2dp"/>

                    <Button
                        android:id="@+id/HitBlow_Button7"
                        android:tag="7"
                        android:layout_width="55dp"
                        android:layout_height="65dp"
                        android:padding="0dp"
                        android:fontFamily="@font/montserrat_alternates_medium_italic"
                        android:text="7"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:onClick="tapNum"
                        android:layout_margin="3dp"

                        app:backgroundTint="@color/white"
                        app:cornerRadius="5dp"
                        app:strokeColor="@color/black"
                        app:strokeWidth="2dp"/>

                    <Button
                        android:id="@+id/HitBlow_Button8"
                        android:tag="8"
                        android:layout_width="55dp"
                        android:layout_height="65dp"
                        android:padding="0dp"
                        android:fontFamily="@font/montserrat_alternates_medium_italic"
                        android:text="8"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:onClick="tapNum"
                        android:layout_margin="3dp"

                        app:backgroundTint="@color/white"
                        app:cornerRadius="5dp"
                        app:strokeColor="@color/black"
                        app:strokeWidth="2dp"/>

                    <Button
                        android:id="@+id/HitBlow_Button9"
                        android:tag="9"
                        android:layout_width="55dp"
                        android:layout_height="65dp"
                        android:padding="0dp"
                        android:fontFamily="@font/montserrat_alternates_medium_italic"
                        android:text="9"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:onClick="tapNum"
                        android:layout_margin="3dp"

                        app:backgroundTint="@color/white"
                        app:cornerRadius="5dp"
                        app:strokeColor="@color/black"
                        app:strokeWidth="2dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center"
                android:layout_marginVertical="2dp"
                android:layout_marginRight="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="60dp"
                        android:layout_height="55dp"
                        android:background="@drawable/back_space"
                        android:onClick="tapBackSpace"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/HitBlow_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat_alternates_medium_italic"
                        android:onClick="tapEnter"
                        android:text="Go"
                        android:textAllCaps="false"
                        android:padding="0dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="2dp"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        app:backgroundTint="@color/white"
                        app:cornerRadius="10dp"
                        app:strokeColor="@color/lime_green"
                        app:strokeWidth="2dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/HitBlow_restart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_alternates_medium_italic"
            android:gravity="center"
            android:text="Tap here\nto Start a New Game"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:visibility="invisible"
            android:clickable="true"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>